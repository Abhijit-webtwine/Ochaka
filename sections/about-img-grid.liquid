<style>
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>
<section class="s-about section-{{ section.id }}-padding">
  <div class="container">
    <div class="tf-grid-layout tf-col-2 md-col-3 xl-col-4">
      <div class="item_2 image d-none d-md-block">
        {% if section.settings.image_2 != blank %}
          <img
            class="lazyload"
            src="{{ section.settings.image_2 | image_url: width: 10 }}"
            data-src="{{ section.settings.image_2 | image_url: width: 800 }}"
            alt="{{ section.settings.image_2.alt | escape }}"
            width="{{ section.settings.image_2.width }}"
            height="{{ section.settings.image_2.height }}"
          >
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
      <div class="wd-2-cols">
        <div class="content-blog text-md-start">
          <div class="d-md-inline-flex">
            {% render 'rotating-text', text: section.settings.rotating_text %}
          </div>
          <div class="box-intro">
            <h4 class="slogan fw-normal">{{ section.settings.heading }}</h4>
            <div class="intro-text">
              {{ section.settings.description }}
            </div>
          </div>
        </div>
      </div>
      <div class="item_1 image">
        {% if section.settings.image_1 != blank %}
          <img
            class="lazyload"
            src="{{ section.settings.image_1 | image_url: width: 10 }}"
            data-src="{{ section.settings.image_1 | image_url: width: 800 }}"
            alt="{{ section.settings.image_1.alt | escape }}"
            width="{{ section.settings.image_1.width }}"
            height="{{ section.settings.image_1.height }}"
          >
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
      <div class="d-md-none d-xl-block">
        {% comment %} Mobile view for Image 2/Duplicate or specific layout requirement {% endcomment %}
        {% if section.settings.image_2 != blank %}
          <img
            class="lazyload d-md-none"
            src="{{ section.settings.image_2 | image_url: width: 10 }}"
            data-src="{{ section.settings.image_2 | image_url: width: 800 }}"
            alt="{{ section.settings.image_2.alt | escape }}"
            width="{{ section.settings.image_2.width }}"
            height="{{ section.settings.image_2.height }}"
          >
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
      <div class="item_3 image">
        {% if section.settings.image_3 != blank %}
          <img
            class="lazyload"
            src="{{ section.settings.image_3 | image_url: width: 10 }}"
            data-src="{{ section.settings.image_3 | image_url: width: 800 }}"
            alt="{{ section.settings.image_3.alt | escape }}"
            width="{{ section.settings.image_3.width }}"
            height="{{ section.settings.image_3.height }}"
          >
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
      <div class="item_4 image">
        {% if section.settings.image_4 != blank %}
          <img
            class="lazyload"
            src="{{ section.settings.image_4 | image_url: width: 10 }}"
            data-src="{{ section.settings.image_4 | image_url: width: 800 }}"
            alt="{{ section.settings.image_4.alt | escape }}"
            width="{{ section.settings.image_4.width }}"
            height="{{ section.settings.image_4.height }}"
          >
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About Image Grid",
  "settings": [
    {
      "type": "text",
      "id": "rotating_text",
      "label": "Rotating Text",
      "default": "Ochaka Store Fashion Style"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "FIRST STORE IN A RURAL AREA OF DENMARK"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Morbi finibus erat ullamcorper malesuada placerat. Integer malesuada orci sed nulla scelerisque fermentum. Suspendisse lacinia elit at bibendum tincidunt.</p>"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "Image 4"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "About Image Grid"
    }
  ]
}
{% endschema %}
