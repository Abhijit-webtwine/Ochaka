<section class="flat-spacing">
  <div class="container">
    <div class="row">
      <div class="{% if section.settings.show_sidebar %}col-lg-9{% else %}col-12{% endif %}">
        <ul class="faq-list" id="faq-accordion-{{ section.id }}">
          {% content_for 'blocks' %}
        </ul>
      </div>
      
      {%- if section.settings.show_sidebar -%}
        <div class="col-lg-3 d-none d-lg-block">
          <div class="blog-sidebar sidebar-content-wrap sticky-top">
            <div class="sidebar-item">
              {% if section.settings.sidebar_title != blank %}
                <h4 class="sb-title">{{ section.settings.sidebar_title }}</h4>
              {% endif %}
              <form class="form-search_faq style-btn-abs-end js-faq-search-form">
                <input class="style-stroke js-faq-search-input" type="text" placeholder="Enter your question or keyword">
                <button class="btn-submit link" type="button">
                  <i class="icon icon-magnifying-glass"></i>
                </button>
              </form>
            </div>
            
            <div class="sidebar-item">
              <h4 class="sb-title">Category</h4>
              <ul class="sb-category js-sidebar-categories">
                <!-- Categories will be populated by JS -->
              </ul>
            </div>
            
            {%- if section.settings.sidebar_banner_image != blank -%}
              <div class="sidebar-item">
                <div class="sb-banner hover-img">
                  <a href="{{ section.settings.sidebar_banner_link }}" class="image img-style">
                    <img 
                      class="lazyload"
                      src="{{ section.settings.sidebar_banner_image | image_url: width: 10 }}" 
                      data-src="{{ section.settings.sidebar_banner_image | image_url: width: 600 }}" 
                      alt="{{ section.settings.sidebar_banner_image.alt | escape }}"
                      width="{{ section.settings.sidebar_banner_image.width }}"
                      height="{{ section.settings.sidebar_banner_image.height }}"
                    >
                  </a>
                  <div class="content">
                    {%- if section.settings.sidebar_banner_subtitle != blank -%}
                      <h5 class="sub-title text-primary">{{ section.settings.sidebar_banner_subtitle }}</h5>
                    {%- endif -%}
                    {%- if section.settings.sidebar_banner_title != blank -%}
                      <h2 class="fw-semibold title">
                        <a href="{{ section.settings.sidebar_banner_link }}" class="text-white link">
                          {{ section.settings.sidebar_banner_title }}
                        </a>
                      </h2>
                    {%- endif -%}
                    {%- if section.settings.sidebar_banner_button_text != blank -%}
                      <a href="{{ section.settings.sidebar_banner_link }}" class="tf-btn btn-white animate-btn animate-dark">
                        {{ section.settings.sidebar_banner_button_text }}
                        <i class="icon icon-arrow-right"></i>
                      </a>
                    {%- endif -%}
                  </div>
                </div>
              </div>
            {%- endif -%}
          </div>
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "FAQ Section",
  "settings": [
    {
      "type": "header",
      "content": "Sidebar Settings"
    },
    {
      "type": "checkbox",
      "id": "show_sidebar",
      "label": "Show Sidebar",
      "default": true
    },
    {
      "type": "text",
      "id": "sidebar_title",
      "label": "Search Title",
      "default": "Frequently asked questions"
    },
    {
      "type": "header",
      "content": "Sidebar Banner"
    },
    {
      "type": "image_picker",
      "id": "sidebar_banner_image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "sidebar_banner_subtitle",
      "label": "Banner Subtitle",
      "default": "Sale Upto 45%"
    },
    {
      "type": "text",
      "id": "sidebar_banner_title",
      "label": "Banner Title",
      "default": "Fall winter collection"
    },
    {
      "type": "text",
      "id": "sidebar_banner_button_text",
      "label": "Button Text",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "sidebar_banner_link",
      "label": "Banner Link"
    }
  ],
  "blocks": [
    {
      "type": "faq-item"
    }
  ],
  "presets": [
    {
      "name": "FAQ Section",
      "blocks": [
        {
          "type": "faq-item"
        },
        {
          "type": "faq-item"
        }
      ]
    }
  ]
}
{% endschema %}
