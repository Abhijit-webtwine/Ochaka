<section
  class="flat-spacing s-our-store"
>
  {% if section.settings.show_header %}
    <div class="container">
      <div class="heading flat-spacing pt-0">
        {% render 'rotating-text', text: section.settings.rotating_text %}
        <div class="text-center">
          {% liquid
            assign subtitle = false
            if section.settings.subtitle != blank
              assign subtitle = true
            endif
          %}

          {% render 'title',
            class: 's-title',
            title: section.settings.title,
            subtitle: subtitle,
            large_title: section.settings.heading_style,
            heading_weight: section.settings.heading_weight,
          %}

          {% if section.settings.subtitle != blank %}
            <p class="s-subtitle h6-text">
              {{ section.settings.subtitle }}
            </p>
          {% endif %}
        </div>
      </div>
    </div>
  {% endif %}

  <div class="container">
    <div class="store-list">
      {% content_for 'blocks' %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Store List",
  "settings": [
    {
      "type": "header",
      "content": "Section Header"
    },
    {
      "type": "checkbox",
      "id": "show_header",
      "label": "Show Header",
      "default": false
    },
    {
      "type": "text",
      "id": "rotating_text",
      "label": "Rotating Text",
      "default": "Ochaka Store Fashion Style"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Ochaka. Store"
    },
    {
      "type": "select",
      "id": "heading_style",
      "label": "Heading Style",
      "options": [
        {
          "value": "true",
          "label": "Large"
        },
        {
          "value": "false",
          "label": "Small"
        }
      ],
      "default": "true"
    },
    {
      "type": "select",
      "id": "heading_weight",
      "label": "Heading Weight",
      "options": [
        {
          "value": "normal",
          "label": "Normal"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "none",
          "label": "None"
        }
      ],
      "default": "none"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec porta purus scelerisque felis condimentum."
    }
  ],
  "blocks": [
    {
      "type": "store-item"
    }
  ],
  "presets": [
    {
      "name": "Store List",
    }
  ]
}
{% endschema %}
