<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  @media screen and (min-width: 768px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top_tablet }}px;
      padding-bottom: {{ section.settings.padding_bottom_tablet }}px;
    }
  }

  @media screen and (min-width: 1025px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top_desktop }}px;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    }
  }
</style>

<section class="{% if section.settings.spacing %}flat-spacing{% endif %} section-{{ section.id }}-padding">
  <div class="container">
    {% if section.settings.heading != blank or section.settings.subheading != blank %}
      <div class="sect-title text-center wow fadeInUp">
        {% if section.settings.heading != blank %}
          <div class="h1 title mb-16">
            {{ section.settings.heading }}
          </div>
        {% endif %}

        {% if section.settings.subheading != blank %}
          <div class="h6">
            {{ section.settings.subheading }}
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>

  <div
    dir="ltr"
    class="swiper tf-swiper wow fadeInUp"
    data-preview="{{ section.settings.slides_desktop }}"
    data-tablet="{{ section.settings.slides_tablet }}"
    data-mobile-sm="{{ section.settings.slides_mobile }}"
    data-mobile="2"
    data-space="{{ section.settings.space }}"
    data-pagination="2"
    data-pagination-sm="3"
    data-pagination-md="4"
    data-pagination-lg="6"
  >
    <div class="swiper-wrapper">

      {% for block in section.blocks %}
        <div class="swiper-slide" {{ block.shopify_attributes }}>
          <div class="gallery-item hover-img hover-overlay">
            <div class="image img-style">
              {% if block.settings.image %}
                {{
                  block.settings.image
                  | image_url: width: 600
                  | image_tag:
                    class: 'lazyload',
                    loading: 'lazy',
                    alt: block.settings.image.alt | default: 'Instagram image'
                }}
              {% endif %}
            </div>

            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="box-icon hover-tooltip">
                <span class="icon icon-instagram-logo"></span>
                <span class="tooltip">
                  {{ block.settings.tooltip_text }}
                </span>
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}

    </div>

    <div class="sw-dot-default tf-sw-pagination"></div>
  </div>
</section>

{% schema %}
{
  "name": "Instagram Slider",
  "settings": [
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "checkbox",
      "id": "spacing",
      "label": "Enable Section Spacing",
      "default": true
    },
    {
      "type": "header",
      "content": "Desktop padding"
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "label": "Padding Top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 112
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "label": "Padding Bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 112
    },
    {
      "type": "header",
      "content": "Tablet padding"
    },
    {
      "type": "range",
      "id": "padding_top_tablet",
      "label": "Padding Top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom_tablet",
      "label": "Padding Bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 80
    },
    {
      "type": "header",
      "content": "Mobile padding"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "Padding Top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "Padding Bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 60
    },
    {
      "type": "header",
      "content": "Slider Settings"
    },
    {
      "type": "range",
      "id": "slides_desktop",
      "label": "Desktop",
      "min": 4,
      "max": 6,
      "step": 1,
      "default": 6
    },
    {
      "type": "select",
      "id": "slides_tablet",
      "label": "Tablet",
      "options": [
        {
          "value": "3",
          "label": "3"
        },
        {
          "value": "4",
          "label": "4"
        }
      ],
      "default": "4"
    },
    {
      "type": "select",
      "id": "slides_mobile",
      "label": "Mobile",
      "options": [
        {
          "value": "2",
          "label": "2"
        },
        {
          "value": "3",
          "label": "3"
        }
      ],
      "default": "3"
    },
    {
      "type": "range",
      "id": "space",
      "label": "Space",
      "min": 0,
      "max": 20,
      "step": 1,
      "default": 0
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Follow Us On Instagram"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Instagram item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (product / post)"
        },
        {
          "type": "text",
          "id": "tooltip_text",
          "label": "Tooltip text",
          "default": "View product"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Instagram Slider",
      "category": "Social"
    }
  ]
}
{% endschema %}
