<section class="{% if section.settings.spacing %}flat-spacing{% endif %} pt-0 pb-xl-0">
  <div class="container">
    <div class="sect-title text-center wow fadeInUp">
      {% if section.settings.heading != blank %}
        <div class="h1 title mb-16">
          {{ section.settings.heading }}
        </div>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <div class="h6">
          {{ section.settings.subheading }}
        </div>
      {% endif %}
    </div>
  </div>

  <div
    dir="ltr"
    class="swiper tf-swiper wow fadeInUp"
    data-preview="{{ section.settings.slides-per-view }}"
    data-tablet="4"
    data-mobile-sm="3"
    data-mobile="2"
    data-space="0"
    data-pagination="2"
    data-pagination-sm="3"
    data-pagination-md="4"
    data-pagination-lg="6"
  >
    <div class="swiper-wrapper">

      {% for block in section.blocks %}
        <div class="swiper-slide" {{ block.shopify_attributes }}>
          <div class="gallery-item hover-img hover-overlay">
            <div class="image img-style">
              {% if block.settings.image %}
                {{
                  block.settings.image
                  | image_url: width: 600
                  | image_tag:
                    class: 'lazyload',
                    loading: 'lazy',
                    alt: block.settings.image.alt | default: 'Instagram image'
                }}
              {% endif %}
            </div>

            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="box-icon hover-tooltip">
                <span class="icon icon-instagram-logo"></span>
                <span class="tooltip">
                  {{ block.settings.tooltip_text }}
                </span>
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}

    </div>

    <div class="sw-dot-default tf-sw-pagination"></div>
  </div>
</section>

{% schema %}
{
  "name": "Instagram Slider",
  "settings": [
    {
      "type": "checkbox",
      "id": "spacing",
      "label": "Enable Section Spacing"
    },
    {
      "type": "range",
      "id": "slides-per-view",
      "label": "Slides per view",
      "default": 6,
      "min": 4,
      "max": 6,
      "step": 1
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Follow Us On Instagram"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Instagram item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (product / post)"
        },
        {
          "type": "text",
          "id": "tooltip_text",
          "label": "Tooltip text",
          "default": "View product"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Instagram Slider",
      "category": "Social"
    }
  ]
}
{% endschema %}
