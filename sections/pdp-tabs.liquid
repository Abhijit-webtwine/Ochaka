<style>
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>
<section class="themesFlat section-{{ section.id }}-padding">
  <div class="container">
    {% if section.settings.tab_style == 'tab' %}
      <div class="flat-animate-tab tab-style-1">
        <ul class="menu-tab menu-tab-1" role="tablist">
          <li class="nav-tab-item" role="presentation">
            <a href="#descriptions" class="tab-link active" data-bs-toggle="tab">Descriptions</a>
          </li>
          <li class="nav-tab-item" role="presentation">
            <a href="#policy" class="tab-link" data-bs-toggle="tab">Shipping, Return & Refund Policy</a>
          </li>
          <li class="nav-tab-item" role="presentation">
            <a href="#reviews" class="tab-link" data-bs-toggle="tab">Customer Reviews</a>
          </li>
          <li class="nav-tab-item" role="presentation">
            <a href="#faqs" class="tab-link" data-bs-toggle="tab">FAQs</a>
          </li>
        </ul>
        <div class="tab-content">
          <div class="tab-pane wd-product-descriptions active show" id="descriptions" role="tabpanel">
            <div class="tab-descriptions">
              <div class="h6 desc">
                {{ product.description }}
              </div>
              {% render 'pdp-meta-description', product: product %}
            </div>
          </div>

          <div class="tab-pane wd-product-descriptions" id="policy" role="tabpanel">
            <div class="tab-policy legal-list">
              {{ section.settings.shipping_return_refund_policy.content }}
            </div>
          </div>

          <div class="tab-pane wd-product-descriptions" id="reviews" role="tabpanel">
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when '@app' -%}
                  {% render block %}
              {% endcase %}
            {% endfor %}
          </div>

          <div class="tab-pane wd-product-descriptions" id="faqs" role="tabpanel">
            <div class="tab-faqs">
              {% render 'pdp-faq-tab', sections: section %}
            </div>
          </div>
        </div>
      </div>

    {% elsif section.settings.tab_style == 'accordion' %}
      <div class="faq-descriptions" id="accordion1">
        <div class="widget-accordion">
          <div
            class="accordion-title"
            data-bs-target="#Description"
            data-bs-toggle="collapse"
            aria-expanded="true"
            aria-controls="Description"
            role="button"
          >
            <span>Description</span>
            <span class="icon"></span>
          </div>
          <div id="Description" class="collapse show" data-bs-parent="#accordion1">
            <div class="accordion-content tab-descriptions">
              <div class="h6 desc">
                {{ product.description }}
              </div>
              {% render 'pdp-meta-description', product: product %}
            </div>
          </div>
        </div>
        <div class="widget-accordion">
          <div
            class="accordion-title collapsed"
            data-bs-target="#Shipping1"
            data-bs-toggle="collapse"
            aria-expanded="true"
            aria-controls="Shipping1"
            role="button"
          >
            <span>Shipping, Return & Refund Policy</span>
            <span class="icon"></span>
          </div>
          <div id="Shipping1" class="collapse" data-bs-parent="#accordion1">
            <div class="accordion-content tab-policy">
              <div class="accordion-policy legal-list">
                {{ section.settings.shipping_return_refund_policy.content }}
              </div>
            </div>
          </div>
        </div>
        <div class="widget-accordion">
          <div
            class="accordion-title collapsed"
            data-bs-target="#Customer"
            data-bs-toggle="collapse"
            aria-expanded="true"
            aria-controls="Customer"
            role="button"
          >
            <span>Customer Reviews</span>
            <span class="icon"></span>
          </div>
          <div id="Customer" class="collapse" data-bs-parent="#accordion1">
            {% for block in section.blocks %}
              {%- case block.type -%}
                {%- when '@app' -%}
                  {% render block %}
              {% endcase %}
            {% endfor %}
          </div>
        </div>
        <div class="widget-accordion">
          <div
            class="accordion-title collapsed"
            data-bs-target="#FAQs"
            data-bs-toggle="collapse"
            aria-expanded="true"
            aria-controls="FAQs"
            role="button"
          >
            <span>FAQs</span>
            <span class="icon"></span>
          </div>
          <div id="FAQs" class="collapse" data-bs-parent="#accordion1">
            <div class="accordion-content tab-faqs">
              {% render 'pdp-faq-tab', sections: section %}
            </div>
          </div>
        </div>
      </div>

    {% elsif section.settings.tab_style == 'vertical' %}
      <div class="flat-animate-tab tab-style-3">
        <ul class="menu-tab menu-tab-3" role="tablist" id="parentTab">
          <li class="nav-tab-item" role="presentation">
            <a href="#descriptions" class="tab-link h5 fw-5 active" data-bs-toggle="tab">Descriptions</a>
          </li>
          <li class="nav-tab-item" role="presentation">
            <a href="#policy" class="tab-link h5 fw-5" data-bs-toggle="tab">Shipping, Return & Refund Policy</a>
          </li>
          <li class="nav-tab-item" role="presentation">
            <a href="#reviews" class="tab-link h5 fw-5" data-bs-toggle="tab">Customer Reviews</a>
          </li>
          <li class="nav-tab-item" role="presentation">
            <a href="#faqs" class="tab-link h5 fw-5" data-bs-toggle="tab">FAQs</a>
          </li>
        </ul>
        <div class="tab-content" id="parentTabContent">
          <div
            class="tab-pane wd-product-descriptions active show"
            id="descriptions"
            role="tabpanel"
            aria-labelledby="descriptions"
          >
            <div class="tab-descriptions">
              <div class="h6 desc">
                {{ product.description }}
              </div>
              {% render 'pdp-meta-description', product: product %}
            </div>
          </div>
          <div class="tab-pane wd-product-descriptions" id="policy" role="tabpanel" aria-labelledby="policy">
            <div class="tab-policy legal-list">
              {{ section.settings.shipping_return_refund_policy.content }}
            </div>
          </div>
          <div class="tab-pane wd-product-descriptions" id="reviews" role="tabpanel" aria-labelledby="reviews">
            {% for block in section.blocks %}
              {%- case block.type -%}
                {%- when '@app' -%}
                  {% render block %}
              {% endcase %}
            {% endfor %}
          </div>
          <div class="tab-pane wd-product-descriptions" id="faqs" role="tabpanel" aria-labelledby="faqs">
            <div class="tab-faqs">
              {% render 'pdp-faq-tab', sections: section %}
            </div>
          </div>
        </div>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "PDP Tabs",
  "settings": [
    {
      "type": "select",
      "label": "Tab Style",
      "id": "tab_style",
      "options": [
        {
          "value": "tab",
          "label": "Tab"
        },
        {
          "value": "accordion",
          "label": "Accordion"
        },
        {
          "value": "vertical",
          "label": "Vertical"
        }
