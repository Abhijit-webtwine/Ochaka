<style>
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>
<section class="themesFlat section-{{ section.id }}-padding">
  <div class="container">
    {% assign show_description = false %}
    {% if product.description != blank or product.metafields.custom.specification_table != blank %}
      {% assign show_description = true %}
    {% endif %}

    {% assign show_policy = false %}
    {% if section.settings.shipping_return_refund_policy != blank %}
      {% assign show_policy = true %}
    {% endif %}

    {% assign show_reviews = false %}
    {% assign app_blocks = section.blocks | where: 'type', '@app' %}
    {% if app_blocks.size > 0 %}
      {% assign show_reviews = true %}
    {% endif %}

    {% assign show_faqs = false %}
    {% assign faq_blocks = section.blocks | where: 'type', 'faq_category' %}
    {% if faq_blocks.size > 0 %}
      {% assign show_faqs = true %}
    {% endif %}

    {% assign active_tab = '' %}
    {% if show_description %}
      {% assign active_tab = 'descriptions' %}
    {% elsif show_policy %}
      {% assign active_tab = 'policy' %}
    {% elsif show_reviews %}
      {% assign active_tab = 'reviews' %}
    {% elsif show_faqs %}
      {% assign active_tab = 'faqs' %}
    {% endif %}

    {% if section.settings.tab_style == 'tab' %}
      <div class="flat-animate-tab tab-style-1">
        <ul class="menu-tab menu-tab-1" role="tablist">
          {% if show_description %}
            <li class="nav-tab-item" role="presentation">
              <a
                href="#descriptions"
                class="tab-link {% if active_tab == 'descriptions' %}active{% endif %}"
                data-bs-toggle="tab"
              >Descriptions</a>
            </li>
          {% endif %}
          {% if show_policy %}
            <li class="nav-tab-item" role="presentation">
              <a
                href="#policy"
                class="tab-link {% if active_tab == 'policy' %}active{% endif %}"
                data-bs-toggle="tab"
              >Shipping, Return & Refund Policy</a>
            </li>
          {% endif %}
          {% if show_reviews %}
            <li class="nav-tab-item" role="presentation">
              <a
                href="#reviews"
                class="tab-link {% if active_tab == 'reviews' %}active{% endif %}"
                data-bs-toggle="tab"
              >Customer Reviews</a>
            </li>
          {% endif %}
          {% if show_faqs %}
            <li class="nav-tab-item" role="presentation">
              <a
                href="#faqs"
                class="tab-link {% if active_tab == 'faqs' %}active{% endif %}"
                data-bs-toggle="tab"
              >FAQs</a>
            </li>
          {% endif %}
        </ul>
        <div class="tab-content">
          {% if show_description %}
            <div
              class="tab-pane wd-product-descriptions {% if active_tab == 'descriptions' %}active show{% endif %}"
              id="descriptions"
              role="tabpanel"
            >
              <div class="tab-descriptions">
                <div class="h6 desc">
                  {{ product.description }}
                </div>
                {% render 'pdp-meta-description', product: product %}
              </div>
            </div>
          {% endif %}

          {% if show_policy %}
            <div
              class="tab-pane wd-product-descriptions {% if active_tab == 'policy' %}active show{% endif %}"
              id="policy"
              role="tabpanel"
            >
              <div class="tab-policy legal-list">
                {{ section.settings.shipping_return_refund_policy.content }}
              </div>
            </div>
          {% endif %}

          {% if show_reviews %}
            <div
              class="tab-pane wd-product-descriptions {% if active_tab == 'reviews' %}active show{% endif %}"
              id="reviews"
              role="tabpanel"
            >
              {% for block in app_blocks %}
                {% render block %}
              {% endfor %}
            </div>
          {% endif %}

          {% if show_faqs %}
            <div
              class="tab-pane wd-product-descriptions {% if active_tab == 'faqs' %}active show{% endif %}"
              id="faqs"
              role="tabpanel"
            >
              <div class="tab-faqs">
                {% render 'pdp-faq-tab', sections: section %}
              </div>
            </div>
          {% endif %}
        </div>
      </div>

    {% elsif section.settings.tab_style == 'accordion' %}
      <div class="faq-descriptions" id="accordion1">
        {% if show_description %}
          <div class="widget-accordion">
            <div
              class="accordion-title {% unless active_tab == 'descriptions' %}collapsed{% endunless %}"
              data-bs-target="#Description"
              data-bs-toggle="collapse"
              aria-expanded="{% if active_tab == 'descriptions' %}true{% else %}false{% endif %}"
              aria-controls="Description"
              role="button"
            >
              <span>Description</span>
              <span class="icon"></span>
            </div>
            <div
              id="Description"
              class="collapse {% if active_tab == 'descriptions' %}show{% endif %}"
              data-bs-parent="#accordion1"
            >
              <div class="accordion-content tab-descriptions">
                <div class="h6 desc">
                  {{ product.description }}
                </div>
                {% render 'pdp-meta-description', product: product %}
              </div>
            </div>
          </div>
        {% endif %}
        {% if show_policy %}
          <div class="widget-accordion">
            <div
              class="accordion-title {% unless active_tab == 'policy' %}collapsed{% endunless %}"
              data-bs-target="#Shipping1"
              data-bs-toggle="collapse"
              aria-expanded="{% if active_tab == 'policy' %}true{% else %}false{% endif %}"
              aria-controls="Shipping1"
              role="button"
            >
              <span>Shipping, Return & Refund Policy</span>
              <span class="icon"></span>
            </div>
            <div
              id="Shipping1"
              class="collapse {% if active_tab == 'policy' %}show{% endif %}"
              data-bs-parent="#accordion1"
            >
              <div class="accordion-content tab-policy">
                <div class="accordion-policy legal-list">
                  {{ section.settings.shipping_return_refund_policy.content }}
                </div>
              </div>
            </div>
          </div>
        {% endif %}
        {% if show_reviews %}
          <div class="widget-accordion">
            <div
              class="accordion-title {% unless active_tab == 'reviews' %}collapsed{% endunless %}"
              data-bs-target="#Customer"
              data-bs-toggle="collapse"
              aria-expanded="{% if active_tab == 'reviews' %}true{% else %}false{% endif %}"
              aria-controls="Customer"
              role="button"
            >
              <span>Customer Reviews</span>
              <span class="icon"></span>
            </div>
            <div
              id="Customer"
              class="collapse {% if active_tab == 'reviews' %}show{% endif %}"
              data-bs-parent="#accordion1"
            >
              {% for block in app_blocks %}
                {% render block %}
              {% endfor %}
            </div>
          </div>
        {% endif %}
        {% if show_faqs %}
          <div class="widget-accordion">
            <div
              class="accordion-title {% unless active_tab == 'faqs' %}collapsed{% endunless %}"
              data-bs-target="#FAQs"
              data-bs-toggle="collapse"
              aria-expanded="{% if active_tab == 'faqs' %}true{% else %}false{% endif %}"
              aria-controls="FAQs"
              role="button"
            >
              <span>FAQs</span>
              <span class="icon"></span>
            </div>
            <div
              id="FAQs"
              class="collapse {% if active_tab == 'faqs' %}show{% endif %}"
              data-bs-parent="#accordion1"
            >
              <div class="accordion-content tab-faqs">
                {% render 'pdp-faq-tab', sections: section %}
              </div>
            </div>
          </div>
        {% endif %}
      </div>

    {% elsif section.settings.tab_style == 'vertical' %}
      <div class="flat-animate-tab tab-style-3">
        <ul class="menu-tab menu-tab-3" role="tablist" id="parentTab">
          {% if show_description %}
            <li class="nav-tab-item" role="presentation">
              <a
                href="#descriptions"
                class="tab-link h5 fw-5 {% if active_tab == 'descriptions' %}active{% endif %}"
                data-bs-toggle="tab"
              >Descriptions</a>
            </li>
          {% endif %}
          {% if show_policy %}
            <li class="nav-tab-item" role="presentation">
              <a
                href="#policy"
                class="tab-link h5 fw-5 {% if active_tab == 'policy' %}active{% endif %}"
                data-bs-toggle="tab"
              >Shipping, Return & Refund Policy</a>
            </li>
          {% endif %}
          {% if show_reviews %}
            <li class="nav-tab-item" role="presentation">
              <a
                href="#reviews"
                class="tab-link h5 fw-5 {% if active_tab == 'reviews' %}active{% endif %}"
                data-bs-toggle="tab"
              >Customer Reviews</a>
            </li>
          {% endif %}
          {% if show_faqs %}
            <li class="nav-tab-item" role="presentation">
              <a
                href="#faqs"
                class="tab-link h5 fw-5 {% if active_tab == 'faqs' %}active{% endif %}"
                data-bs-toggle="tab"
              >FAQs</a>
            </li>
          {% endif %}
        </ul>
        <div class="tab-content" id="parentTabContent">
          {% if show_description %}
            <div
              class="tab-pane wd-product-descriptions {% if active_tab == 'descriptions' %}active show{% endif %}"
              id="descriptions"
              role="tabpanel"
              aria-labelledby="descriptions"
            >
              <div class="tab-descriptions">
                <div class="h6 desc">
                  {{ product.description }}
                </div>
                {% render 'pdp-meta-description', product: product %}
              </div>
            </div>
          {% endif %}
          {% if show_policy %}
            <div
              class="tab-pane wd-product-descriptions {% if active_tab == 'policy' %}active show{% endif %}"
              id="policy"
              role="tabpanel"
              aria-labelledby="policy"
            >
              <div class="tab-policy legal-list">
                {{ section.settings.shipping_return_refund_policy.content }}
              </div>
            </div>
          {% endif %}
          {% if show_reviews %}
            <div
              class="tab-pane wd-product-descriptions {% if active_tab == 'reviews' %}active show{% endif %}"
              id="reviews"
              role="tabpanel"
              aria-labelledby="reviews"
            >
              {% for block in app_blocks %}
                {% render block %}
              {% endfor %}
            </div>
          {% endif %}
          {% if show_faqs %}
            <div
              class="tab-pane wd-product-descriptions {% if active_tab == 'faqs' %}active show{% endif %}"
              id="faqs"
              role="tabpanel"
              aria-labelledby="faqs"
            >
              <div class="tab-faqs">
                {% render 'pdp-faq-tab', sections: section %}
              </div>
            </div>
          {% endif %}
        </div>
      </div>

    {% elsif section.settings.tab_style == 'list' %}
      <div class="list-product-description">
        {% if show_description %}
          <div class="tab-descriptions">
            <div class="h6 desc">
              {{ product.description }}
            </div>
            {% render 'pdp-meta-description', product: product %}
          </div>
        {% endif %}
        {% if show_policy %}
          <div class="tab-policy legal-list">
            {{ section.settings.shipping_return_refund_policy.content }}
          </div>
        {% endif %}
        {% if show_reviews %}
          {% for block in app_blocks %}
            {% render block %}
          {% endfor %}
        {% endif %}

        {% if show_faqs %}
          <div class="tab-faqs">
            {% render 'pdp-faq-tab', sections: section %}
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "PDP Tabs",
  "settings": [
    {
      "type": "select",
      "label": "Tab Style",
      "id": "tab_style",
      "options": [
        {
          "value": "tab",
          "label": "Tab"
        },
        {
          "value": "accordion",
          "label": "Accordion"
        },
        {
          "value": "vertical",
          "label": "Vertical"
        },
        {
          "value": "list",
          "label": "List"
        }
      ]
    },
    {
      "type": "page",
      "id": "shipping_return_refund_policy",
      "label": "Shipping, Return & Refund Policy"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "default": 80,
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "default": 80,
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "faq_category",
      "name": "FAQ Category",
      "settings": [
        {
          "type": "text",
          "id": "category_title",
          "label": "Category Title",
          "default": "Product details"
        },
        {
          "type": "text",
          "id": "category_id",
          "label": "Category ID",
          "default": "product",
          "info": "Unique identifier for this category (no spaces, use hyphens)"
        },
        {
          "type": "header",
          "content": "Question 1"
        },
        {
          "type": "text",
          "id": "question_1",
          "label": "Question 1",
          "default": "Type of diamond used?"
        },
        {
          "type": "textarea",
          "id": "answer_1",
          "label": "Answer 1",
          "default": "Natural diamonds with the highest purity"
        },
        {
          "type": "header",
          "content": "Question 2"
        },
        {
          "type": "text",
          "id": "question_2",
          "label": "Question 2",
          "default": "Is the product unisex?"
        },
        {
          "type": "textarea",
          "id": "answer_2",
          "label": "Answer 2",
          "default": "No"
        },
        {
          "type": "header",
          "content": "Question 3"
        },
        {
          "type": "text",
          "id": "question_3",
          "label": "Question 3",
          "default": "What ring sizes are available?"
        },
        {
          "type": "textarea",
          "id": "answer_3",
          "label": "Answer 3",
          "default": "Sizes 5-26; Any size not available online can be customized."
        },
        {
          "type": "header",
          "content": "Question 4"
        },
        {
          "type": "text",
          "id": "question_4",
          "label": "Question 4",
          "default": "Product Finish"
        },
        {
          "type": "textarea",
          "id": "answer_4",
          "label": "Answer 4",
          "default": "High Polish"
        },
        {
          "type": "header",
          "content": "Question 5"
        },
        {
          "type": "text",
          "id": "question_5",
          "label": "Question 5",
          "default": "Does the product cost include GST?"
        },
        {
          "type": "textarea",
          "id": "answer_5",
          "label": "Answer 5",
          "default": "Yes"
        },
        {
          "type": "header",
          "content": "Question 6"
        },
        {
          "type": "text",
          "id": "question_6",
          "label": "Question 6",
          "default": "What % of GST is applicable on the product?"
        },
        {
          "type": "textarea",
          "id": "answer_6",
          "label": "Answer 6",
          "default": "2%"
        },
        {
          "type": "header",
          "content": "Question 7"
        },
        {
          "type": "text",
          "id": "question_7",
          "label": "Question 7",
          "default": "Does the product cost include shipping?"
        },
        {
          "type": "textarea",
          "id": "answer_7",
          "label": "Answer 7",
          "default": "Yes"
        },
        {
          "type": "header",
          "content": "Question 8"
        },
        {
          "type": "text",
          "id": "question_8",
          "label": "Question 8",
          "default": "Does the product cost include product discounts?"
        },
        {
          "type": "textarea",
          "id": "answer_8",
          "label": "Answer 8",
          "default": "Yes. However, any applicable coupon can be applied at the time of payment."
        },
        {
          "type": "header",
          "content": "Question 9"
        },
        {
          "type": "text",
          "id": "question_9",
          "label": "Question 9",
          "default": "Are there any other hidden costs?"
        },
        {
          "type": "textarea",
          "id": "answer_9",
          "label": "Answer 9",
          "default": "No there are no hidden costs or additional charges."
        },
        {
          "type": "header",
          "content": "Question 10"
        },
        {
          "type": "text",
          "id": "question_10",
          "label": "Question 10",
          "default": "Is there a price breakup available for the product price?"
        },
        {
          "type": "textarea",
          "id": "answer_10",
          "label": "Answer 10",
          "default": "Yes, same is available in the price break-up section."
        }
      ]
    },
    {
      "type": "@app"
    }
  ],
  "enabled_on": {
    "templates": ["product"]
  },
  "presets": [
    {
      "name": "PDP Tabs"
    }
  ]
}
{% endschema %}
