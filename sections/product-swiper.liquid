<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top_desktop }}px;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    }
  }
</style>

<section class="section-{{ section.id }}-padding">
  <div class="container">
    <div class="sect-title text-center wow fadeInUp">
      <h1 class="title mb-8">{{ section.settings.heading | escape }}</h1>
      <p class="s-subtitle h6">{{ section.settings.subheading | escape }}</p>
    </div>
    {% render 'products-swiper',
      collection_ref: section.settings.collection.handle,
      products_limit: section.settings.products_limit,
      grid_rows: section.settings.grid_rows,
      hide_pagination_desktop: section.settings.hide_pagination_desktop
    %}
  </div>
</section>

{% schema %}
{
  "name": "Product Swiper",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Best Seller"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Up to 50% off Lorem ipsum dolor sit amet, consectetur adipiscing elit"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_limit",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 8,
      "label": "Products Limit"
    },
    {
      "type": "select",
      "id": "grid_rows",
      "label": "Grid Rows",
      "options": [
        { "value": "1", "label": "1 Row" },
        { "value": "2", "label": "2 Rows" }
      ],
      "default": "1"
    },
    {
      "type": "checkbox",
      "id": "hide_pagination_desktop",
      "label": "Hide Pagination Desktop",
      "default": false
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "label": "Padding Top Desktop",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 112
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "label": "Padding Bottom Desktop",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 112
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "Padding Top Mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "Padding Bottom Mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Product Swiper"
    }
  ]
}
{% endschema %}
