<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top_desktop }}px;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    }
  }
</style>

<section class="section-{{ section.id }}-padding">
  <div class="container">
    {% if section.settings.title != blank or section.settings.subtitle != blank %}
      <div class="sect-title {% if section.settings.subtitle == blank %}type-4 justify-content-center{% endif %} text-center wow fadeInUp">
        {% liquid
          assign subtitle = false
          if section.settings.subtitle != blank
            assign subtitle = true
          endif
        %}

        {% render 'title',
          class: 's-title',
          title: section.settings.title,
          subtitle: subtitle,
          large_title: section.settings.heading_style,
          heading_weight: section.settings.heading_weight,
        %}

        {% if section.settings.subtitle != blank %}
          <p class="s-subtitle h6">{{ section.settings.subtitle | escape }}</p>
        {% endif %}
      </div>
    {% endif %}
    {% render 'products-swiper',
      collection_ref: section.settings.collection.handle,
      products_limit: section.settings.products_limit,
      grid_rows: section.settings.grid_rows,
      hide_pagination_desktop: section.settings.hide_pagination_desktop
    %}
  </div>
</section>

{% schema %}
{
  "name": "Product Swiper",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Best Seller"
    },
    {
      "type": "select",
      "id": "heading_style",
      "label": "Heading Style",
      "options": [
        {
          "value": "true",
          "label": "Large"
        },
        {
          "value": "false",
          "label": "Small"
        }
      ],
      "default": "true"
    },
    {
      "type": "select",
      "id": "heading_weight",
      "label": "Heading Weight",
      "options": [
        {
          "value": "normal",
          "label": "Normal"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "none",
          "label": "None"
        }
      ],
      "default": "none"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Up to 50% off Lorem ipsum dolor sit amet, consectetur adipiscing elit"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_limit",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 8,
      "label": "Products Limit"
    },
    {
      "type": "select",
      "id": "grid_rows",
      "label": "Grid Rows",
      "options": [
        { "value": "1", "label": "1 Row" },
        { "value": "2", "label": "2 Rows" }
      ],
      "default": "1"
    },
    {
      "type": "checkbox",
      "id": "hide_pagination_desktop",
      "label": "Hide Pagination Desktop",
      "default": false
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "label": "Padding Top Desktop",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 112
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "label": "Padding Bottom Desktop",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 112
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "Padding Top Mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "Padding Bottom Mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Product Swiper"
    }
  ]
}
{% endschema %}
