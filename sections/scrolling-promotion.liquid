{%- style -%}
    #shopify-section-{{ section.id }} {
      --section-padding-top: {{ section.settings.padding_top }}px;
      --section-padding-bottom: {{ section.settings.padding_bottom }}px;
      {%- if section.settings.use_custom_colors %}
        --color-icon: {{ section.settings.colors_icon.red }},
        {{ section.settings.colors_icon.green }},
        {{ section.settings.colors_icon.blue }};
        --gradient-background: {% if section.settings.gradient_background != blank %}{{ section.settings.gradient_background }}
      {% else %}{{ section.settings.colors_background }}
    {% endif %};
      --color-background: {{ section.settings.colors_background.red }},
      {{ section.settings.colors_background.green }},
      {{ section.settings.colors_background.blue }};
      --color-foreground: {{ section.settings.colors_text.red }},
      {{ section.settings.colors_text.green }},
      {{ section.settings.colors_text.blue }};
      --color-link: var(--color-foreground);
    {% endif -%}
  }

  @media screen and (max-width: 768px) {
    #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top_mobile }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }
    }
{%- endstyle -%}

{{ 'section-scrolling-promotion.css' | asset_url | stylesheet_tag }}

<div
  class="text-center section--padding flex items-center justify-between w-full overflow-hidden {% if section.settings.flex_direction %} flex-row {% else %} flex-col {% endif %}"
  style="background-color: {{ section.settings.bg_color }};"
>
  <div class="flex w-full justify-between items-center flex-col md:flex-row gap-8 md:gap-0">
    <scrolling-promotion
      data-speed="{{ section.settings.speed }}"
      class="scrolling-promotion !bg-transparent scrolling-promotion--{{ section.settings.direction }} {% if section.settings.show_divider %} section--divider{% endif %}{% if section.settings.use_custom_colors and section.settings.colors_icon != section.settings.colors_background %} promotion-icon--colored{% endif %} {% if section.settings.sticky_checkbox %} md:w-5/6 {% endif %}"
    >
      <div class="promotion">
        {%- for block in section.blocks -%}
        {%- case block.type -%}
        {%- when 'announcement' -%}
        {% if section.settings.sticky_checkbox == false %}
        <div class="promotion__item promotion-icon--{{ block.settings.icon_size }} px-8">
          {%- if block.settings.link != blank -%}
          <a href="{{ block.settings.link }}" class="promotion__link">
            {%- endif -%}
            {%- if block.settings.custom_icon != blank -%}
            <span class="promotion__icon">
              {{ block.settings.custom_icon }}
            </span>
            {%- elsif block.settings.icon != 'none' -%}
            <span class="promotion__icon">
              {% render 'icon-guarantee', icon: block.settings.icon %}
            </span>
            {%- endif -%}
            <div class="promotion__text heading"
              style="--font-size: {{ block.settings.text_size }}px; color: {{ section.settings.colors_text }};">
              {{ block.settings.text }}
            </div>
            {%- if block.settings.link != blank -%}
          </a>
          {%- endif -%}
        </div>
        {% endif %}
        {%- when 'image' -%}
        {%- liquid
        assign image_height = block.settings.height
        assign image_height_2x = block.settings.height | times: 2
        -%}
        <div class="promotion__item media-wrapper media-wrapper--small px-8" style="--image-height: {{ image_height }}px"
          {{ block.shopify_attributes }}>
          {%- if block.settings.link != blank -%}
          <a href="{{ block.settings.link }}" class="promotion__link">
            {%- endif -%}
            {%- if block.settings.image != blank -%}
            <div class="image-animate media">
              <img
                srcset="{{ block.settings.image | image_url: height: image_height }} 1x, {{ block.settings.image | image_url: height: image_height_2x }} 2x"
                src="{{ block.settings.image | image_url: height: image_height }}"
                alt="{{ block.settings.image.alt | escape }}"
                width="{{ image_height | times: block.settings.image.aspect_ratio }}" height="{{ image_height }}"
                class="promotion__image image-fit">
            </div>
            {%- if block.settings.img_description != blank -%}
            <p class="max-w-52 font-semibold leading-none" style="color: {{ block.settings.desc_color }}">
              {{ block.settings.img_description }}
            </p>
            {%- endif -%}

                {%- else -%}
                  {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
                {%- if block.settings.link != blank -%}
                  </a>
                {%- endif -%}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </scrolling-promotion>
    {% if section.settings.sticky_checkbox == true %}
      <div class="sticky_announcement">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'announcement' -%}
            <div class="promotion__item promotion-icon--{{ block.settings.icon_size }} pr-4 lg:pr-16">
              {%- if block.settings.link != blank -%}
              <a href="{{ block.settings.link }}" class="promotion__link">
                {%- endif -%}
                {%- if block.settings.custom_icon != blank -%}
                <span class="promotion__icon">
                  {{ block.settings.custom_icon }}
                </span>
                {%- elsif block.settings.icon != 'none' -%}
                <span class="promotion__icon">
                  {% render 'icon-guarantee', icon: block.settings.icon %}
                </span>
                {%- endif -%}
                <div class="promotion__text heading underline"
                  style="--font-size: {{ block.settings.text_size }}px; color: {{ section.settings.colors_text }};">
                  {{ block.settings.text }}
                </div>
                {%- if block.settings.link != blank -%}
              </a>
              {%- endif -%}
            </div>
          {% endcase %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
  {% if section.settings.link_text != blank %}
  <a href="{{ section.settings.link_url }}" class="button_bottom button md:mt-[4.25rem] mt-[2.125rem] !px-[3.75rem] !bg-transparent">
    {{ section.settings.link_text }}
  </a>
  {% endif %}
</div>
