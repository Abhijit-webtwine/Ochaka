{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="template-search{% unless search.performed and search.results_count > 0 %} template-search--empty{% endunless %} section-{{ section.id }}-padding">
  {% if search.performed %}
    {% paginate search.results by 12 %}
      <div class="search-products">
        <div class="container">
          {% if search.results_count == 0 %}
            <!-- No Results Found -->
            <h1 class="text--left section-header__title">
              We couldn't find any matching products
            </h1>
            <p class="no-results-message">
              Try adjusting your search or browse our collections for more options.
            </p>
          {% else %}
            <!-- Search Results -->
              <div class="search-result-product">
                <div class="grid-uniform product-grid col-main">
                  <div class="products-grid-view">
                    <div class="tf-grid-layout tf-col-4">
                      {% for item in search.results %}
                        {% render 'card-product', product: item, show_wishlist: true, show_compare: true, show_quick_view: true, show_add_to_cart: true %}
                      {% endfor %}
                    </div>
                  </div>
                </div>
              </div>
          {% endif %}

          {% if paginate.pages > 1 %}
            <!-- Pagination -->
            <div class="text-center pagination-wrap">
              {% render 'pagination', paginate: paginate %}
            </div>
          {% endif %}
        </div>
      </div>
    {% endpaginate %}
  {% endif %}
</div>

{% schema %}
{
  "name": "Search",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ]
}
{% endschema %}