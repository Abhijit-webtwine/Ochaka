<div class="slideshow__image-wrapper media-wrapper">
  {%- if block.settings.image != blank -%}
    <div class="slideshow__image media media--{{ section.settings.image_ratio }} media-mobile--{{ section.settings.mobile_image_ratio }}"
      style="--image-position: {{ block.settings.image_position }}"
    >
    {% comment %}START Speed Optimization Code Added by Helix Commerce{% endcomment %}
    {% assign lazystatus = block.settings.lazyload_image %}
    {% if lazystatus == true %}
      {% assign loading = 'lazy' %}
      {% assign is = 'lazy-image' %}
    {% else %}
      {% assign loading = 'eager' %}
      {% assign is = 'eager-image' %}
    {% endif %}
    {% comment %}END Speed Optimization Code Added by Helix Commerce{% endcomment %}
      {%- liquid
        if block.settings.image_mobile == blank
          echo block.settings.image | image_url: width: 3840 | image_tag: loading: loading, sizes: '100vw', widths: '375, 750, 1100, 1500, 1780, 2000, 3000, 3840', is: is
        else
          echo block.settings.image_mobile | image_url: width: 3840 | image_tag: loading: loading, class: 'medium-hide large-up-hide', sizes: '100vw', widths: '375, 750, 1100, 1500, 1780, 2000, 3000, 3840', is: is
          echo block.settings.image | image_url: width: 3840 | image_tag: loading: loading, class: 'small-hide', sizes: '100vw', widths: '375, 750, 1100, 1500, 1780, 2000, 3000, 3840', is: is
        endif
      -%}
      </div>
  {%- else -%}
    <div class="slideshow__image slideshow__image--placeholder media media--{{ section.settings.image_ratio }} media-mobile--{{ section.settings.mobile_image_ratio }}">
      {%- assign current = position | modulo: 2 | plus: 1 -%}
      {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder' }}
    </div>
  {%- endif -%}
  {%- if block.settings.button_link != blank -%}
    <a href="{{ block.settings.button_link }}" class="full-unstyled-link">&nbsp;</a>
  {%- endif -%}
</div>
