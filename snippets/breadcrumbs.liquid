{% comment %}
  Renders the breadcrumb.

  Accepts:
  - text_style: {String} The text style
  - show_divider: {String} Show devider

  Usage:
  {% render 'breadcrumbs' %}
{% endcomment %}
{% assign excluded_suffixes = 'about-us,aboutus' | split: ',' %}
{%- unless template.name == 'index' or template.name == 'article' or template.name == '404' or excluded_suffixes contains template.suffix -%}
  <nav class="s-page-title">
    <div class="container">
      <div class="content">
        <h1 class="title-page">{% unless template.name == 'page' %}{{ template.name | replace: '-', ' ' | capitalize }}{% else %}{{ template.suffix | capitalize }}{% endunless %}</h1>
        <ul class="breadcrumbs-page">
          <li><a href="{{ routes.root_url }}" class="h6 link">Home</a></li>
          <li class="d-flex"><i class="icon icon-caret-right"></i></li>
          <li>
            <h6 class="current-page fw-normal">{% unless template.name == 'page' %}{{ template.name | replace: '-', ' ' | capitalize }}{% else %}{{ template.suffix | capitalize }}{% endunless %}</h6>
          </li>
        </ul>
      </div>
    </div>
  </nav>
{%- endunless -%}
